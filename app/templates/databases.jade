include mixins/cog
include mixins/bytes


.row
  .col-md-3
    .panel.panel-default(style='border-radius: 0; box-shadow: 0 2px 2px rgba(0, 0, 0, 0.05); margin-top: 40px;')
      .panel-heading(style='background-color: transparent; border-color: transparent;')
        h2 databases
          a.btn.btn-primary.pull-right(data-action='create', title='create new database')
            i.glyphicon.glyphicon-plus
            | create

      ul.list-group.panel-body
       - for database in databases
        li.list-group-item
          a(href='#dbs/#{database.name}')
            h3.pull-left(style='margin: 0px;')= database.name
          +cog('#dbs/#{database.name}', ['repair', 'drop', 'clone', 'fsync'])
