mixin cells(namespaces)
  each ns in namespaces
    .ns-column
      .column #{deltas[ns + '.total.count']}
      //- .column #{deltas[ns + '.read.count'] || '-'}
      .column #{deltas[ns + '.insert.count']}
      .column #{deltas[ns + '.update.count']}
      .column #{deltas[ns + '.lock.time']}µs

mixin row(namespaces)
  .matrix-row
    +cells(namespaces)
    - d = new Date()
    .date #{d.getHours()}:#{d.getMinutes()}:#{d.getSeconds()}

if update === true
  +row(namespaces)
else
  .row
    .col-md-8
      .top-matrix
        .header
         - for ns in namespaces
          .ns
            .label #{ns}
            .header-column
              div
                span &nbsp;
            .header-column
              div
                span ops
            .header-column
              div
                span updates
            .header-column
              div
                span inserts
            .header-column
              div
                span µs lock
        .body
          +row(namespaces)
