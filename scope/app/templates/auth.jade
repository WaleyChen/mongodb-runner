.row
  .col-md-6.col-md-push-3.panel.tool-panel.padded.panel-bottom
    .col-md-6
      form.form
        .form-group
          label.sr-only(for='host') mongodb://
          if host
            .form-control-static #{host}
          else
            input#host.form-control.input-lg(placeholder='mongodb://')

        .form-group
          label.sr-only(for='username') username
          input#username.form-control.input-lg(placeholder='username')
        .form-group
          label.sr-only(for='password') password
          input#password.form-control.input-lg(type='password', placeholder='password')

        button.btn.btn-primary.btn-lg(type="submit", style="width: 100%;") Sign In
