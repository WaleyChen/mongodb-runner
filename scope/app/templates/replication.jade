if instance.replicaset
  .row(style="margin-top: 20px;")
    .col-md-8

    .col-md-4
      .panel.panel-default
        .panel-heading
          h3(style="margin: 0; padding: 0;") #{instance.replicaset._id}

        ul.list-group.panel-body
         - for member in instance.replicaset.members
          li.list-group-item
            h4 #{member._id}
else
  .row
    .col-md-6.col-md-push-3
      .panel.panel-default
        .panel-body.well
          :markdown
            #### Replication

            This instance is not a member of a replicaset.

