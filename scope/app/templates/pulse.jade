include mixins/cog
include mixins/bytes

.row
  .col-md-12 &nbsp;
.row
  .col-md-6.col-md-push-3
    .panel.panel-default
      if instance.database_names.length === 0
        .panel-body
          .well
            :markdown
              #### Welcome to MongoDB!

              It appears you don't have any databases on this instance.

              To get started, open a new terminal window and run:

              ```
              mongo --eval "db.getMongo().getDB('testing')"
              ```

      else
        .panel-heading
          h3(style="margin: 0; padding: 0;") #{instance.host.hostname}
          h1(style="margin: 0; padding: 0;") databases

        ul.list-group.panel-body
         - for database_name in instance.database_names
          li.list-group-item
            h4
              a(href='#database/#{database_name}') #{database_name}
