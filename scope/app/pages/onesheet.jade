    #mongoscope
      .col-md-8.col-md-push-2.col-lg-6.col-lg-push-3.col-xl-4.col-xl-push-4.panel
        section: .row
          .col-md-6
            h1 mongoscope

        section: .row
          .col-md-12
            h2 Security
          .col-md-12
            h3 Token Authentication

          .col-md-12
            a(href="img/token-based-auth.001.png", target="_blank")
              img(width="100%", src="img/token-based-auth.001.png")

        section: .row
          .col-md-12: h2 Stack
          .col-md-6
            h3 REST
            dl
              dt
                a(href="http://expressjs.com") expressjs
              dd HTTP
              dt
                a(href="http://socket.io") socket.io
              dd sockets

          .col-md-6
            h3 UI
            dl
              dt
                a(href="", target="_blank") backbone
              dd mvc
              dt
                a(href="", target="_blank") browserify
              dd dependencies
              dt
                a(href="", target="_blank") jade
              dd templating
              dt
