{
  "name": "mongoscope",
  "description": "Wouldn't it be great if monogo just had this stuff builtin instead of rolling it yourself?",
  "version": "0.2.0",
  "scripts": {
    "start": "NODE_ENV=development DEBUG=mongo* gulp dev",
    "dist": "NODE_ENV=production DEBUG=* lone",
    "test": "NODE_ENV=testing mocha",
    "install": "echo 'install ui deps and building' && cd ui && npm install;"
  },
  "author": "Lucas Hrabovsky <lucas@mongodb.com> (http://imlucas.com)",
  "homepage": "http://10gen.github.io/mongoscope/onesheet.html",
  "repository": {
    "type": "git",
    "url": "git://github.com/10gen/mongoscope.git"
  },
  "bin": {
    "mongoscope": "./bin/mongoscope.js"
  },
  "lone": {
    "ignore": [
      "gulpfile.js",
      "README.md",
      "aws/**",
      "docs/**",
      "ui/**",
      "test/**",
      "static/img/*.0*.png",
      "**/.bin/**",
      "**/mocha/**",
      "**/flash-src/**",
      "**/socket.io-client/components/**",
      "**/node_modules/redis/**",
      "node_modules/**/bin/**",
      "node_modules/**/test/**",
      "node_modules/**/tests/**",
      "node_modules/**/example/**",
      "node_modules/**/examples/**",
      "node_modules/**/benchmarks/**",
      "node_modules/**/benchmark.html",
      "node_modules/**/tools/**",
      "node_modules/gulp/**",
      "node_modules/gulp-util/**",
      "node_modules/**/docs/**",
      "node_modules/**/doc/**",
      "node_modules/**/*.log",
      "node_modules/**/ext/win32/**",
      "node_modules/**/tmp/**",
      "node_modules/**/*.swf",
      "node_modules/**/*.min.js",
      "node_modules/**/browser_build/**",
      "**/socket.io-client/lib/vendor/**"
    ]
  },
  "dependencies": {
    "express": "~3.4.8",
    "socket.io": "~0.9.16",
    "mongodb": "latest",
    "debug": "^0.7.4",
    "mongolog": "^0.0.5",
    "diskspace": "^0.1.6",
    "jsonwebtoken": "^0.2.0",
    "sse-stream": "0.0.4",
    "up": "git://github.com/learnboost/up",
    "nconf": "^0.6.9"
  },
  "devDependencies": {
    "mocha": "^1.17.1",
    "gulp": "~3.5.2",
    "gulp-util": "~2.2.14",
    "supertest": "^0.10.0",
    "lone": "imlucas/lone",
    "lodash": "^2.4.1"
  }
}
