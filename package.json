{
  "name": "mg",
  "version": "0.0.0",
  "description": "MongoDB Launcher",
  "dependencies": {
    "yargs": "^1.2.1",
    "debug": "^0.7.4",
    "mongodmon": "^0.2.1",
    "underscore": "^1.6.0"
  },
  "scripts": {
    "dist": "DEBUG=* lone",
    "start": "DEBUG=* MG_BIN=/srv/mongo/bin/mongod MG_DBPATH=~/.mongodb/data ./bin/mg.js",
    "install": "./bin/install-children.sh"
  },
  "devDependencies": {
    "lone": "imlucas/lone"
  },
  "lone": {
    "ignore": [
      "scope/**",
      "rest/**",
      "bin/*.sh",
      "**/mocha/**",
      "**/flash-src/**",
      "**/socket.io-client/components/**",
      "**/node_modules/redis/**",
      "**/test/**",
      "**/example/**"
    ]
  },
  "bin": {
    "mg": "./bin/mg.js"
  },
  "jshintConfig": {
    "eqeqeq": true,
    "node": true,
    "indent": 2,
    "newcap": true,
    "predef": [ "describe", "it", "before", "beforeEach", "after", "afterEach"],
    "quotmark": "single",
    "unused": true,
    "trailing": true,
    "boss": true,
    "loopfunc": true
  }
}
