    .styleguide.padded.pane-item
      section.bordered(data-name='styleguide')
        h1 Styleguide

      section.bordered(data-name='text')
        h2 Text

        ul.list-unstyled.list-inline
          li normal
          li.smaller .small
          li.lead .lead
          li.subtle .subtle

        ul.list-unstyled.list-inline
          li: span.label.label-default .label-default
          li: span.label.label-info .label-info
          li: span.label.label-success .label-success
          li: span.label.label-warning .label-warning
          li: span.label.label-danger .label-danger

      section.bordered(data-name='buttons')
        h2 Buttons

        ul.list-unstyled.list-inline
          li: button.btn.btn-primary .btn-primary
          li: button.btn.btn-default .btn-default
          li: button.btn.btn-default.btn-success .btn-success
          li: button.btn.btn-default.btn-warning .btn-warning
          li: button.btn.btn-link .btn-link

        h3: code .active
        ul.list-unstyled.list-inline
          li: button.btn.btn-primary.active .btn-primary.active
          li: button.btn.btn-default.active .btn-default.active
          li: button.btn.btn-success.active .btn-success.active
          li: button.btn.btn-warning.active .btn-warning.active
          li: button.btn.btn-link.active .btn-link.active

        h3: code .disabled
        ul.list-unstyled.list-inline
          li: button.btn.btn-primary.disabled .btn-primary.disabled
          li: button.btn.btn-default.disabled .btn-default.disabled
          li: button.btn.btn-success.disabled .btn-success.disabled
          li: button.btn.btn-warning.disabled .btn-warning.disabled
          li: button.btn.btn-link.disabled .btn-link.disabled

        h3: code .btn-block
        ul.list-unstyled
          li: button.btn.btn-primary.btn-block .btn-primary.btn-block
          li: button.btn.btn-default.btn-block .btn-default.btn-block
          li: button.btn.btn-default.btn-success.btn-block .btn-success.btn-block
          li: button.btn.btn-default.btn-warning.btn-block .btn-warning.btn-block
          li: button.btn.btn-link.btn-block .btn-link.btn-block

