table.table.small.table-condensed.table-responsive
  thead
    tr
    for key in schema.keys
      th #{key}
  tfoot
    tr
      td(colspan="#{schema.keys.length}", style="text-align: center;")
        | #{skip} - #{skip+samples.length}
  tbody
  each doc, i in samples
    tr(data-index='#{i}')
     - for key in schema.keys
      td
        if typeof doc[key] === 'object'
          | {&hellip;}
        else
          | #{doc[key]}
.row
  .col-md-12
    .col-md-5
    .col-md-2
      .pager
        li.previous
          a prev
        li.next
          a next
    .col-md-5
