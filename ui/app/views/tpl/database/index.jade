include ../mixins/bytes

- stats = database.stats
- stats.extent_used_size = stats.document_size + stats.index_size
- stats.extent_free_size = stats.storage_size - stats.extent_used_size
- stats.extent_size = stats.storage_size / stats.extent_count
//- - host.disk_used = host.disk_total - host.disk_free

ol.breadcrumb
  unless context.deployment.type === 'standalone'
    li: a(href='#home') #{context.deployment.name}
  li
    a(href='#home') #{context.instance.name}
  li database: #{database.name}

.panel.panel-default
  .panel-body
    .databases: .summary

.row
  .col-md-4
    .panel.panel-default
      .panel-heading: .panel-title Collections
      .list-group
