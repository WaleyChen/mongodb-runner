include ../mixins/bytes

- stats = database.stats
- stats.extent_used_size = stats.document_size + stats.index_size
- stats.extent_free_size = stats.storage_size - stats.extent_used_size
- stats.extent_size = stats.storage_size / stats.extent_count
//- - host.disk_used = host.disk_total - host.disk_free

ol.breadcrumb
  unless context.deployment.type === 'standalone'
    li: a(href='#mongodb/#{context.deployment.id}') #{context.deployment.name}
  li
    a(href='#mongodb/#{context.instance.id}') #{context.instance.name}
  li database: #{database.name}


.content
  .panel.panel-default
    .panel-body
      .databases: .summary

  hr

  .col-md-4
    .panel.panel-default
      .panel-heading: .panel-title Collections
      .list-group
        for collection_name in database.collection_names
          a.list-group-item(href='##{context.instance.id}/collection/#{database.name}/#{collection_name}')
            .pull-left: i.fa.fa-angle-right.fa-fw
            .list-group-item-heading #{collection_name}

  .col-md-4
    .panel.panel-default
      .panel-heading: .panel-title Storage
      .panel-body
        .donut





